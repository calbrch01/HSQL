{
  "name": "hsqlc",
  "dependencies": {
    "antlr4": "^4.8.0",
    "string-template": "^1.0.0",
    "yargs": "^15.3.1"
  },
  "version": "1.0.0",
  "scripts": {
    "regen": "java -jar gen/antlr-4*.jar -Dlanguage=JavaScript HSQL.g4  -no-listener -o gen/ -visitor",
