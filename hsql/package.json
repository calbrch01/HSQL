  "private": true,
  "bin": {
    "hsqlc": "index.js"
  },
  "devDependencies": {
    "@types/antlr4": "^4.7.1",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "jsdoc": "^3.6.4",
    "mocha": "^7.2.0",
    "pkg": "^4.4.8",
    "xml2js": "^0.4.23"
  },
  "pkg": {
    "assets": [
      "visitors/misc/*.json",
      "gen/*.interp",
      "gen/*.tokens"
    ]
  }
