-- hsqlt make Commands/plot_command/wordcloud.hsql
-- ecl run thor Commands/plot_command/wordcloud.ecl

import %.marks;
counting = select subid,AVG(marks) as avgmarks from marks.marks group by subid order by subid;
marksJoined = select subname, avgmarks from counting join marks.subs on counting.subid=marks.subs.subid as somesource;

plot marksJoined title mybarplot type wordcloud;

