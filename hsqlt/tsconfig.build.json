{
    "extends":"./tsconfig.json",
    "exclude": [
        "src/**/*.spec.ts",
        "src/test/*.ts"
    ],
    "compilerOptions": {
        "target":"ES2016",
        "module":"commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "noImplicitAny":true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}
