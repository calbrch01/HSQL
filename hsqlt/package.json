{
    "name": "hsql-remade",
    "version": "0.1.0",
    "description": "",
    "main": "build/index.js",
    "bin": {
        "hsqlc": "build/index.js"
    },
    "pkg": {
        "scripts": "build/**/*.js",
        "targets": [
            "node12-linux-x64",
            "node12-macos-x64",
            "node12-win-x64"
        ],
        "outputPath": "dist"
    },
    "scripts": {
        "test": "find ./src -name '*.spec.ts' | xargs ts-mocha src/test/*.ts",
        "start": "ts-node src",
        "check": "tsc --watch --noEmit",
        "doc": "typedoc ",
        "build-dev": "tsc",
        "prebuild": "npm run clean-ts",
        "build": "tsc -p tsconfig.build.json",
        "prepkg": "npm run clean-ts && npm run build && npm run clean-pkg",
        "pkg": "pkg .",
        "clean-pkg": "rimraf dist",
        "clean-doc": "rimraf docs",
        "clean-ts": "rimraf build",
        "clean": "rimraf dist docs build",
        "regen": "antlr4ts -visitor -no-listener grammar/HSQL.g4 -o src/misc/"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/node": "^14.14.22",
        "antlr4ts": "^0.5.0-alpha.4",
        "ts-node": "^9.1.1",
        "yargs": "^16.2.0"
    },
    "nodemonConfig": {
        "ext": "*.ts,*.json",
        "ignore": [
            "test/**/*.ts",
            "src/**/*.spec.ts"
        ],
        "delay": "2500",
        "exec": "ts-node src/index.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "@types/yargs": "^16.0.0",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "chai": "^4.2.0",
        "mocha": "^8.2.1",
        "nodemon": "^2.0.7",
        "pkg": "^4.5.1",
        "rimraf": "^3.0.2",
        "ts-mocha": "^8.0.0",
        "typedoc": "^0.20.19",
        "typescript": "^4.2.3"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "arrowParens": "avoid",
        "printWidth": 120,
        "singleQuote": true
    }
}