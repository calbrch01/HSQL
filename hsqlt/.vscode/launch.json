    "version": "0.2.0",
    "configurations": [
        {
            "name": "playground",
            "type": "ecl",
            "request": "launch",
            "protocol": "http",
            "serverAddress": "play.hpccsystems.com",
            "port": 8010,
            "targetCluster": "hthor",
            "rejectUnauthorized": true,
            "resultLimit": 100,
            "timeoutSecs": 60,
            "user": "vscode_user",
            "password": ""
        },

        {
            "name": "localhost",
            "type": "ecl",
            "request": "launch",
            "protocol": "http",
            "serverAddress": "localhost",
            "port": 8010,
            "targetCluster": "hthor",
            "rejectUnauthorized": true,
            "resultLimit": 100,
            "timeoutSecs": 60,
            "user": "vscode_user",
            "password": ""
        },
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Debug Grammar with Test Input",
            "grammar":"grammar/HSQL.g4",
            "input": "input.hsql",
            "startRule": "program",
            "visualParseTree": true,
            // "printParseTree": true
        },
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Test Rules",
            "grammar":"grammar/HSQL.g4",
            "input": "input.fragment",
            "startRule": "completestmt",
            "visualParseTree": true,
        }
    ]
}