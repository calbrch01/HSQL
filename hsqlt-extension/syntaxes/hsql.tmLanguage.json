{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.hsql",
    "patterns": [
        {
            "include": "#commentDoubleDash"
        },
        {
            "include": "#commentStandard"
        },
        {
            "include": "#commentBlock"
        },
        {
            "match": "(?i)(MAX|MIN|COUNT|AVG|TRIM)(?=\\()",
            "name": "support.function"
        },
        {
            "match": "(?i)(method|file)\\b",
            "name": "support.function"
        },
        {
            "match": "[0-9]+",
            "name": "constant.numeric"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#singleQuotedString"
        },
        {
            "include": "#keywords"
        },
        {
            "match": "[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*",
            "name": "variable"
        },
        {
            "match": "[<][>]?|[>][=]?|[<][=]|[!][=]|[!=+-/*]",
            "name": "keyword.operator"
        }
    ],
    "repository": {
        "commentDoubleDash": {
            "comment": "Use this to explain the function of the rule, if necessary",
            "name": "comment.line.double-dash",
            "match": "--.*$"
        },
        "commentStandard": {
            "comment": "Standard comment",
            "name": "comment.line.double-slash",
            "match": "//.*$"
        },
        "commentBlock": {
            "begin": "/[*]",
            "end": "[*]/",
            "name": "comment.block"
        },
        "keywords": {
            "match": "(?i)(select|from|on|as|plot|import|output|title|train|predict|group|by|order|join|declare|title|type|where|distribute)\\b",
            "name": "keyword.other"
        },
        "strings": {
            "match": "\"([^\\\"]|\\.)*\"",
            "name": "string"
        },
        "singleQuotedString": {
            "match": "'([^\\']|\\.)*'",
            "name": "string"
        }
    }
}