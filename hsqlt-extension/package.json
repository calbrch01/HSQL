{
    "name": "hsqlt-extension",
    "displayName": "hsqlt-extension",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:hsqlt-extension.helloWorld",
        "onLanguage:hsql"
    ],
    "main": "./dist/client.js",
    "contributes": {
        "commands": [
            {
                "command": "hsqlt-extension.helloWorld",
                "title": "Hello World"
            }
        ],
        "grammars": [
            {
                "language": "hsql",
                "scopeName": "source.hsql",
                "path": "./syntaxes/hsql.tmLanguage.json",
                "embeddedLanguages": {
                    "source.sql": "sql"
                }
            }
        ],
        "languages": [
            {
                "id": "hsql",
                "aliases": [
                    "HSQL"
                ],
                "extensions": [
                    ".hsql",
                    ".dhsql"
                ],
                "configuration": "./hsql-configuration.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "postinstall": "npm i --prefix client && npm i --prefix server",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile": "webpack",
        "watch": "webpack --watch",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint client/src server/src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "shebang-loader": "^0.0.1",
        "ts-loader": "^9.2.3",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0"
    }
}
