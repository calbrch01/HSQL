{
	"name": "hsql-server",
	"description": "HSQL Server Configuration",
	"author": "Foo Bar",
	"license": "MIT",
	"version": "0.9.1",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:hsql"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "hsql",
				"aliases": [
					"HSQL",
					"HAQL",
					"haql"
				],
				"extensions": [
					".hsql",
					".haql"
				],
				"configuration": "./hsql-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "hsql",
				"scopeName": "source.hsql",
				"path": "./syntaxes/hsql.tmLanguage.json",
				"embeddedLanguages": {
					"source.sql": "sql"
				}
			}
		],
		"commands": [
			{
				"command": "hsql.compile",
				"title": "HSQL: Translate to ECL",
				"when": "editorLangId == hsql",
				"enablement": "editorLangId == hsql"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Configurable properties",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 5,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"private": true,
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.39",
		"@typescript-eslint/parser": "^2.33.0",
		"eslint": "^6.4.0",
		"mocha": "^6.2.2",
		"typescript": "^3.9.2"
	},
	"dependencies": {}
}
